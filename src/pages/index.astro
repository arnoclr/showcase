---
import Layout from "../layouts/Layout.astro";
import FlyingTitles from "../sections/FlyingTitles.astro";
import Footer from "../sections/Footer.astro";
import BentoSelector from "../components/BentoSelector.astro";
import WagonBento from "../sections/bentos/WagonBento.astro";
import MSMBento from "../sections/bentos/MSMBento.astro";
import Theses from "../sections/Theses.astro";
import Omsistuff from "../sections/Omsistuff.astro";
---

<Layout title="Welcome to Astro.">
  <FlyingTitles />
  <BentoSelector />
  <WagonBento />
  <MSMBento />
  <Omsistuff />
  <Theses />
  <Footer />
</Layout>

<style>
  h2,
  h1 {
    margin: 0;
    width: 100%;
    text-align: center;
  }

  i {
    font-style: normal;
    opacity: 0.7;
    font-weight: 400;
  }

  h1 {
    margin-top: 10vh;
  }

  .hero-eyebrow {
    font-size: 24px;
    line-height: 1.16667;
    font-weight: 400;
    letter-spacing: 0em;
  }

  .headline-super {
    font-size: 80px;
    line-height: 1.05;
    font-weight: 400;
    letter-spacing: -0.035em;
  }

  img {
    width: 100%;
    height: auto;
  }
</style>
