---
import MessageBubble from "../components/MessageBubble.astro";
import { projects } from "../projects";

interface Props {
  title: string;
}

const { title } = Astro.props;

const rawCSS = projects
  .map((project) => {
    return `
    body:not(:has(#checkbox-${project.id}:checked)) #navtitle-${project.id} {
      display: none;
    }
  `;
  })
  .join("\n");
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <nav>
      <span>
        <span>Arno Cellarier â€”</span>
        {
          projects.map((project) => (
            <span id={"navtitle-" + project.id}>{project.title}</span>
          ))
        }
      </span>
      <ul>
        <li>
          <a target="_blank" href="https://cdn1.arno.cl/2024/03/CV%202024.pdf">
            Lire mon CV
          </a>
        </li>
        <li>
          <a href="mailto:bonjour@arnocellarier.fr" class="bubble">
            <MessageBubble>Hey ! On discute ?</MessageBubble>
          </a>
        </li>
      </ul>
    </nav>

    <slot />

    <script>
      import { AnimatedScroll } from "../AnimatedScroll";

      new AnimatedScroll();
    </script>
  </body>
</html>

<style is:inline set:html={rawCSS}></style>
<style>
  :root {
    --navbar-horizontal-padding: 10vw;
  }

  nav {
    top: 0;
    left: 0;
    right: 0;
    position: fixed;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 62px;
    padding: 0 var(--navbar-horizontal-padding);
    background-color: #fefefee7;
    border-bottom: 1px solid #eee;
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    z-index: 99;
  }

  nav span {
    color: gray;
  }

  nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    align-items: baseline;
    gap: 16px;
  }

  nav a {
    text-decoration: none;
    color: unset;
  }

  nav a:not(.bubble):hover {
    text-decoration: underline;
  }

  .bubble {
    display: block;
    transform: scale(1) rotate(0deg);
    transition: transform 0.2s ease;
    transform-origin: right;
  }

  .bubble:hover {
    transform: scale(1.03) rotate(1deg);
  }

  @media (max-width: 580px) {
    :root {
      --navbar-horizontal-padding: 23px;
    }

    nav {
      gap: 8px;
      justify-content: start;
      align-items: center;
      flex-direction: column;
      background-color: white;
    }

    nav ul {
      margin-left: auto;
    }

    nav span {
      font-size: small;
    }
  }

  @media (prefers-color-scheme: dark) {
    nav {
      background-color: #000b;
      border-color: #222;
    }
  }

  @media (prefers-color-scheme: dark) and (max-width: 580px) {
    nav {
      background-color: #000;
    }
  }
</style>

<style is:global>
  @font-face {
    font-family: "Script";
    src: url("/fonts/Just_Another_Hand/JustAnotherHand-Regular.ttf");
  }

  @font-face {
    font-family: "Body";
    src: url("/fonts/Arial Rounded MT Bold Regular/Arial Rounded MT Bold Regular.ttf");
    font-weight: 500;
  }

  @font-face {
    font-family: "Body";
    src: url("/fonts/Arial Rounded MT Regular/Arial Rounded MT Regular.ttf");
    font-weight: 400;
  }

  body,
  html {
    overflow-x: hidden;
    margin: 0;
    padding: 0;
  }

  body {
    font-family: "Body", sans-serif;
  }

  * {
    box-sizing: border-box;
  }

  [data-footnote] sup a {
    font-size: max(11px, 0.3em);
    color: gray;
    vertical-align: super;
  }

  .bento-content [role="rowgroup"] {
    height: 120vh;
    gap: 20vw;
    display: flex;
    align-items: center;
  }

  [role="rowgroup"].numbers {
    height: unset;
    gap: 0;
    width: 100%;
    justify-content: space-evenly;
  }

  [role="rowgroup"].numbers p {
    font-size: 2vw;
    display: flex;
    flex-direction: column;
    align-items: center;
    opacity: 1;
  }

  [role="rowgroup"].numbers span:first-child {
    font-size: 8vw;
    font-weight: bold;
  }

  [role="rowgroup"].numbers span:last-child {
    text-align: center;
  }

  .threePhonesOrTablet {
    width: 60%;
    height: auto;
  }

  .singlePhone {
    width: auto;
    height: 80vh;
  }

  .tabletAndPhone {
    width: 100%;
    height: auto;
  }

  @keyframes appearWithBlur {
    from {
      transform-origin: top;
      opacity: 0;
      filter: blur(14px);
      transform: scale(1.03);
    }
    80% {
      opacity: 1;
    }
    to {
      transform-origin: top;
      filter: blur(0);
      transform: scale(1);
    }
  }

  @media (max-width: 900px) {
    .threePhonesOrTablet {
      width: 100%;
    }
  }

  @media (max-width: 500px) {
    .tabletAndPhone {
      height: 40vh;
      width: 100%;
      object-fit: cover;
      transform: scale(1.2);
      margin: 5vh 0;
    }
  }

  @media (prefers-color-scheme: dark) {
    body {
      background-color: #000;
      color: #fff;
    }

    .for-light-mode {
      display: none;
    }
  }

  @media (prefers-color-scheme: light) {
    .for-dark-mode {
      display: none;
    }
  }
</style>
